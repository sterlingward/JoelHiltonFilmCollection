@model IEnumerable<Movie>

<h2>Movie Collection</h2>

<!-- Table to display the list of movies -->
<table>
    <thead>
    <tr>
        <!-- Column headers for movie details -->
        <th>Category</th>
        <th>Title</th>
        <th>Year</th>
        <th>Director</th>
        <th>Rating</th>
        <th>Edited</th>
        <th>Lent To</th>
        <th>Notes</th>
    </tr>
    </thead>
    <tbody>
    <!-- Loop through each movie in the collection and display its details -->
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Category</td>  <!-- Displays the movie category -->
            <td>@movie.Title</td>  <!-- Displays the movie title -->
            <td>@movie.Year</td>  <!-- Displays the release year -->
            <td>@movie.Director</td>  <!-- Displays the director's name -->
            <td>@movie.Rating</td>  <!-- Displays the movie rating (G, PG, etc.) -->
            <td>@(movie.Edited ? "Yes" : "No")</td>  <!-- Displays "Yes" if edited, otherwise "No" -->
            <td>@movie.LentTo</td>  <!-- Displays who the movie is lent to (if applicable) -->
            <td>@movie.Notes</td>  <!-- Displays additional notes (limited to 25 characters) -->
        </tr>
    }
    </tbody>
</table>

